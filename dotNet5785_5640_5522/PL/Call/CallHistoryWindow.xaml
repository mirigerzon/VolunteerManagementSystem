<Window x:Class="PL.Volunteer.CallHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Call History" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding ClosedCalls}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Call ID" Binding="{Binding Id}" Width="*" />
                <DataGridTextColumn Header="Call Type" Binding="{Binding CallType}" Width="*" />
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="2*" />
                <DataGridTextColumn Header="Assignment date" Binding="{Binding AssignedAt}" Width="*" />
                <DataGridTextColumn Header="Close Status" Binding="{Binding ClosureType}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1" Content="Close" Click="Close_Click" HorizontalAlignment="Center" Margin="0,10"/>
    </Grid>
</Window>