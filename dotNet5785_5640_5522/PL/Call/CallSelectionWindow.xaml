<Window x:Class="PL.Volunteer.CallSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Call for Treatment" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Title -->
        <TextBlock Grid.ColumnSpan="2" Text="Select Call for Treatment" FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <!-- Calls List -->
        <ListView Grid.Row="1" Grid.Column="0" 
                  ItemsSource="{Binding OpenCalls}" 
                  SelectedItem="{Binding SelectedCall, Mode=TwoWay}" 
                  SelectionChanged="CallsList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID Number" DisplayMemberBinding="{Binding Id}" Width="100"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="100"/>
                    <GridViewColumn Header="Address" DisplayMemberBinding="{Binding Address}" Width="150"/>
                    <GridViewColumn Header="Distance" DisplayMemberBinding="{Binding Distance}" Width="80"/>
                    <GridViewColumn Header="Select" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Select" Click="ChooseCall_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <!-- Description and Map -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <GroupBox Header="Verbal Description">
                <TextBlock Text="{Binding SelectedCall.Description}" TextWrapping="Wrap" Padding="5" Height="100"/>
            </GroupBox>
            <GroupBox Header="Map">
                <Border Height="300" Background="LightGray">
                    <Grid>
                        <WebBrowser Name="MapWebView" Visibility="Collapsed"/>
                        <TextBlock Name="MapPlaceholder" Text="Select a call to view location on map" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>