<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Management Window" Height="600" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- System Clock and Buttons -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>

            <!-- Label with Binding to CurrentTime -->
            <Label Grid.Column="0" Content="{Binding CurrentTime, StringFormat=System Clock: {0:dd/MM/yyyy HH:mm}}" FontWeight="Bold" FontSize="20" VerticalAlignment="Center"/>

            <!-- Buttons for advancing time -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Advance Minute" Margin="2" Click="BtnAdvanceMinute_Click"/>
                <Button Content="Advance Hour" Margin="2" Click="BtnAdvanceHour_Click"/>
                <Button Content="Advance Day" Margin="2" Click="BtnAdvanceDay_Click"/>
                <Button Content="Advance Year" Margin="2" Click="BtnAdvanceYear_Click"/>
            </StackPanel>
        </Grid>

        <!-- Configuration Variables Grid -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
                <Label Content="Risk range:" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtCurrentRiskRange" VerticalAlignment="Center" Margin="5,0" Foreground="DarkBlue"/>
                <TextBox Width="100" Margin="5,0" x:Name="txtRiskRange"/>
                <Button Content="Update" Margin="5,0" Click="BtnUpdateRiskRange_Click"/>
            </StackPanel>

        </Grid>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">

            <!-- כפתור לפתיחת מסך תצוגת הרשימה -->
            <Button Content="Handle Volunteers"
                    Width="150" Margin="10"
                    Click="BtnHandleVolunteers_Click"/>

            <Button Content="Initialize DB" Width="150" Margin="10" Click="BtnInitializeDB_Click"/>
            <Button Content="Reset DB" Width="150" Margin="10" Click="BtnResetDB_Click"/>
        </StackPanel>
    </Grid>
</Window>
