<Window x:Class="PL.Volunteer.VolunteerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bo="clr-namespace:BO;assembly=BL"
        Title="Volunteer Details"
        Height="600" Width="400"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="Control">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Id -->
            <RowDefinition Height="Auto"/>
            <!-- Full Name -->
            <RowDefinition Height="Auto"/>
            <!-- Phone -->
            <RowDefinition Height="Auto"/>
            <!-- Email -->
            <RowDefinition Height="Auto"/>
            <!-- Password -->
            <RowDefinition Height="Auto"/>
            <!-- Address -->
            <RowDefinition Height="Auto"/>
            <!-- MaxOfDistance -->
            <RowDefinition Height="*"/>
            <!-- IsActive -->
            <RowDefinition Height="Auto"/>
            <!-- Spacer / Button -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Id -->
        <Label Grid.Row="0" Grid.Column="0" Content="Id:"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Volunteer.Id}" IsEnabled="False"/>

        <!-- Full Name -->
        <Label Grid.Row="1" Grid.Column="0" Content="Full Name:"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Volunteer.FullName}"/>

        <!-- Phone Number -->
        <Label Grid.Row="2" Grid.Column="0" Content="Phone Number:"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Volunteer.PhoneNumber}"/>

        <!-- Email -->
        <Label Grid.Row="3" Grid.Column="0" Content="Email:"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Volunteer.Email}"/>

        <!-- Password -->
        <Label Grid.Row="4" Grid.Column="0" Content="Password:"/>
        <PasswordBox x:Name="passwordBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <!-- Address -->
        <Label Grid.Row="5" Grid.Column="0" Content="Address:"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Volunteer.Address}"/>

        <!-- Max Of Distance -->
        <Label Grid.Row="6" Grid.Column="0" Content="Max Of Distance (km):"/>
        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Volunteer.MaxOfDistance}"/>

        <!-- IsActive -->
        <Label Grid.Row="7" Grid.Column="0" Content="Is Active:"/>
        <CheckBox Grid.Row="7" Grid.Column="1" IsChecked="{Binding Volunteer.IsActive}"/>

        <!-- Button -->
        <Button Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                Height="40" Width="100" HorizontalAlignment="Center"
                Content="{Binding ButtonText}"
                Click="btnAddUpdate_Click"/>
    </Grid>
</Window>
