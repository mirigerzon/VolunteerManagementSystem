<Window x:Class="PL.Volunteer.VolunteerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="פרטי מתנדב"
        Height="550" Width="420"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="פרטי מתנדב" FontSize="20" FontWeight="Bold" TextAlignment="Center"
                   HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0"/>

        <StackPanel Grid.Row="1">
            <Label Content="תעודת זהות:"/>
            <TextBox x:Name="IdTextBox" IsEnabled="False"/>

            <Label Content="שם פרטי:"/>
            <TextBox x:Name="FirstNameTextBox"/>

            <Label Content="שם משפחה:"/>
            <TextBox x:Name="LastNameTextBox"/>

            <Label Content="מספר טלפון:"/>
            <TextBox x:Name="PhoneTextBox"/>

            <Label Content="סיסמה:"/>
            <PasswordBox x:Name="passwordBox"/>

            <CheckBox x:Name="IsActiveCheckBox" Content="פעיל"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="שמור" Width="100" Click="SaveButton_Click"/>
            <Button Content="מחק" Width="100" Click="DeleteButton_Click" Background="#cc0000" Foreground="White"/>
            <Button Content="ביטול" Width="100" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
