<Window x:Class="PL.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:PL.Converters"
        Title="ניהול ראשי - מנהל" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Background="#f9f9f9">

            <!-- זמן מערכת -->
            <GroupBox Header="ניהול שעון מערכת" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,10">
                        <Run Text="שעה נוכחית: "/>
                        <Run Text="{Binding CurrentTime, StringFormat='dd/MM/yyyy HH:mm'}"/>
                    </TextBlock>
                    <WrapPanel Margin="0,0,0,10">
                        <Button Content="+ דקה" Click="BtnAdvanceMinute_Click"/>
                        <Button Content="+ שעה" Click="BtnAdvanceHour_Click"/>
                        <Button Content="+ יום" Click="BtnAdvanceDay_Click"/>
                        <Button Content="+ שנה" Click="BtnAdvanceYear_Click"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- טווח סיכון -->
            <GroupBox Header="ניהול טווח זמן סיכון" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="{Binding CurrentRiskRangeText}" FontSize="14" Margin="0,0,0,10"/>
                    <WrapPanel>
                        <Label Content="טווח חדש (hh:mm):" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtRiskRange" Width="100"/>
                        <Button Content="עדכן" Margin="10,0,0,0" Click="BtnUpdateRiskRange_Click"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- מסד נתונים -->
            <GroupBox Header="ניהול מסד נתונים" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <WrapPanel>
                        <Button Content="אתחל עם נתוני דוגמה" Click="BtnInitializeDB_Click"/>
                        <Button Content="אפס נתונים" Click="BtnResetDB_Click"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- ישויות -->
            <GroupBox Header="ניהול ישויות מערכת" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <WrapPanel>
                        <Button Content="ניהול מתנדבים" Click="BtnHandleVolunteers_Click"/>
                        <Button Content="ניהול קריאות" Click="BtnHandleCalls_Click"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- סטטוסים -->
            <GroupBox Header="סטטוסים של קריאות" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <WrapPanel>
                        <Button Content="הכול (X)" IsEnabled="False"/>
                        <Button Content="חדשות (X)" IsEnabled="False"/>
                        <Button Content="פעילות (X)" IsEnabled="False"/>
                        <Button Content="סגורות (X)" IsEnabled="False"/>
                    </WrapPanel>
                    <TextBlock Margin="10,5,0,0" FontStyle="Italic">סטטיסטיקות יתעדכנו בהתאם למידע.</TextBlock>
                </StackPanel>
            </GroupBox>

            <!-- סיום -->
            <Button Content="התנתק" HorizontalAlignment="Right" Padding="15,7" Margin="0,10,0,0" Click="Logout_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>
